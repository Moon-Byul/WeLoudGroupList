<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/group_button_state"
    android:id="@+id/cloud_lnGroupMain">

    <ImageView
        android:id="@+id/cloud_ivFileExtImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="4dp"
        android:src="@drawable/group" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center_vertical">

            <TextView
                android:text="aaa.txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18sp"
                android:id="@+id/cloud_tvFileName" />

            <TextView
                android:text="업로드 날짜 : 2017년 1월 27일"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/cloud_tvFileUpload" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>